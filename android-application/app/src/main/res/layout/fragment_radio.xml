<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:src="@drawable/placeholder_background"/>

    <LinearLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ui.MainActivity"
        android:weightSum="100">

        <!-- Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"/>
        <!-- Spacing -->

        <ImageView
            android:id="@+id/cover_art"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="60"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/cover_art_alt_text"
            tools:src="@drawable/cover_art_placeholder" />

        <!-- Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <!-- Spacing -->

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Song title here"
            style="@style/TextAppearance.AppTheme.Display"/>

        <TextView
            android:id="@+id/artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Song artist here"
            style="@style/TextAppearance.AppTheme.Display2"/>

        <!-- Spacing -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <!-- Spacing -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="100">

            <!-- Pause/play toggle -->

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="50"/>

            <Space
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_weight="0"/>

            <ToggleButton
                android:id="@+id/start_stop_button"
                android:background="@drawable/circle"
                android:button="@drawable/toggle_selector"
                android:textOff=""
                android:textOn=""
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="25"/>

            <ToggleButton
                android:id="@+id/toggle_favorite"
                android:background="@null"
                android:button="@drawable/favorite_toggle_light"
                android:textOff=""
                android:textOn=""
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>
