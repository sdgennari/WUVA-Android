<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dark" parent="AppTheme.Base">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="android:textColorPrimary">@color/darkTextColorPrimary</item>
    </style>

    <style name="AppTheme.Light" parent="AppTheme.Base">
        <item name="colorPrimary">@color/lightColorPrimary</item>
        <item name="colorPrimaryDark">@color/lightColorPrimaryDark</item>
        <item name="colorAccent">@color/lightColorAccent</item>
        <item name="android:textColorPrimary">@color/lightTextColorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/darkTextColorPrimary</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@color/darkColorAccent</item>
        <item name="android:actionMenuTextColor">@color/darkColorAccent</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance" />

    <style name="TextAppearance.AppTheme" />

    <style name="TextAppearance.AppTheme.Display" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/darkTextColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AppTheme.Display2" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/darkTextColorSecondary</item>
    </style>

    <style name="TextAppearance.AppTheme.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/lightTextColorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AppTheme.Subtitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/lightTextColorSecondary</item>
    </style>

    <style name="TextAppearance.AppTheme.EmptyTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textColor">@color/lightTextColorSecondary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.AppTheme.EmptyMessage" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/text_subtitle</item>
        <item name="android:textColor">@color/lightTextColorSecondary</item>
    </style>

</resources>
